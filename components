components/Button.js
import React from "react";

const Button = ({ text, onClick, style }) => {
  return (
    <button 
      onClick={onClick} 
      style={{
        padding: "10px 20px",
        fontSize: "16px",
        fontWeight: "bold",
        backgroundColor: "#007bff",
        color: "#fff",
        border: "none",
        borderRadius: "5px",
        cursor: "pointer",
        ...style
      }}
    >
      {text}
    </button>
  );
};

export default Button;
